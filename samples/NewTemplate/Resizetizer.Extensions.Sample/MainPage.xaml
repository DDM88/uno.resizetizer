<Page
	x:Class="Resizetizer.Extensions.Sample.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Resizetizer.Extensions.Sample"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	mc:Ignorable="d">

	<ScrollViewer>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="Hello Uno Platform" />

			<!--  These Should work everywere  -->
			<Image
				Width="300"
				Height="300"
				Source="ms-appx:///Images/dotnet_bot.png" />

			<!--  This works on Android  -->

			<Image
				Width="300"
				Height="300"
				Source="dotnet_bot.png" />

			<!--  This works on iOS  -->
			<Image
				Width="300"
				Height="300"
				Source="Images\\dotnet_bot" />
		</StackPanel>
	</ScrollViewer>
</Page>
